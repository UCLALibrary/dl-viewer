{
  "name": "dl-viewer",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "prepare": "cypress install",
    "test:e2e": "start-server-and-test preview http://localhost:5173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 5173' http://localhost:5173 'cypress open --e2e'",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "copy-uv": "rimraf public/uv && cp -R node_modules/universalviewer/dist public/uv",
    "copy-uv3": "rimraf public/uv3 && cp -R node_modules/universalviewer3/dist public/uv3",
    "postinstall": "npm run copy-uv && npm run copy-uv3"
  },
  "dependencies": {
    "@gtm-support/vue-gtm": "^3.1.0",
    "@iiif/parser": "^2.2.5",
    "axios": "^0.21.3",
    "core-js": "^3.6.5",
    "hls.js": "^0.12.4",
    "jquery": "^3.3.1",
    "lodash": "^4.17.21",
    "mediaelement": "^4.2.16",
    "rimraf": "^6.0.1",
    "mirador": "^4.0.0",
    "mirador-annotation-editor": "^1.1.3-rc4",
    "mirador-image-tools": "^1.0.0",
    "universalviewer": "4.0.21",
    "universalviewer3": "npm:universalviewer@^3.1.4",
    "video.js": "^8.6.1",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.13",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "cypress": "^15.3.0",
    "cypress-iframe": "^1.0.1",
    "eslint": "^9.33.0",
    "eslint-plugin-cypress": "^5.1.1",
    "eslint-plugin-vue": "~10.4.0",
    "jiti": "^2.5.1",
    "jsdom": "^27.0.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "start-server-and-test": "^2.1.2",
    "typescript": "~5.9.0",
    "vite": "^7.1.7",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.0"
  },
  "overrides": {
    "mirador-annotation-editor": {
      "mirador": "$mirador"
    }
  }
}
